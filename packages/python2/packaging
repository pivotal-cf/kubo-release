#!/bin/bash

set -e -x

CPUS=`grep -c ^processor /proc/cpuinfo`

tar xzf Python-2.7.*.tgz
pushd Python-2.7.*
	./configure --prefix=${BOSH_INSTALL_TARGET}

	make -j${CPUS}
	make install
	ln -s ${BOSH_INSTALL_TARGET}/bin/python2  /usr/bin/python
    #export PATH=${PATH}:${BOSH_INSTALL_TARGET}/bin
popd